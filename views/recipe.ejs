<% if(recipe != null ) { %>
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/profile">Home</a></li>
		<li class="breadcrumb-item active" aria-current="page">
			<%- recipe.name %>
		</li>
	</ol>
</nav>
<div class="row">
	<div class="col-12 col-md-4">
		<img
			src="<%= recipe.image %>"
			class="img-fluid sticky-top"
			style="top: 20px"
			alt="<%- recipe.name %>"
			loading="lazy"
		/>
	</div>
	<div class="col-12 col-md-8">
		<div class="row">
			<div class="col-12"><h1><%- recipe.name %></h1></div>
			<%if(recipe.user == user.id){ %>
			<!-- <form
          action="/recipe/editRecipe/<%= recipe.id %>?_method=PUT"
          method="POST"
          class="col-1"
        >
          <button class="bi bi-pencil-square" type="submit"></button>
        </form> -->
			<form
				action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE"
				method="POST"
				class="col-2"
			>
				<button class="bi bi-trash" type="submit"></button>
			</form>
			<%}%>
			<div class="col-12 mb-1">
				<i class=""></i>Date added - <%- recipe.createdAt %>
			</div>
			<div class="col-12 mb-1"><i class=""></i>Made by <%- recipe.chef %></div>
			<div class="col-12 mb-1">
				<i class="bi bi-tag"></i> <%- recipe.category %>
			</div>
		</div>
		<div class="row pt-4">
			<div class="col-12 mb-4">
				<h4>Ingredients</h4>
				<ul class="list-group list-group-flush">
					<% recipe.ingredients.forEach(function(ingredients, index){ %>
					<li class="list-group-item"><%= ingredients %></li>
					<% }) %>
				</ul>
			</div>
			<div class="col-12 mb-4" style="white-space: pre-line">
				<h4>Cooking Instructions</h4>
				<%- recipe.instructions %>
			</div>
			<div class="col-12 mb-4" style="white-space: pre-line">
				<h4>Notes</h4>
				<%- recipe.notes %>
			</div>
		</div>
	</div>
</div>
<% } else { %>
<p>No item found.</p>
<% } %>
